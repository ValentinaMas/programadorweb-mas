<div class="container" style="margin: 100px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la novedad</h4>
            <form method="post" action="/admin/novedades/modificar">
            <input type="hidden" value="{{novedades.id}}" name="id">
                <div class="form-group" style="margin-bottom: 10px;">
                    <label for="">Titulo</label>
                    <input type="text" class="form-control" value="{{novedades.titulo}}" name="titulo">
                </div>
                <div class="form-group" style="margin-bottom: 10px;">
                    <label for="">Subtitulo</label>
                    <textarea type="text" class="form-control" name="subtitulo">{{novedades.subtitulo}}</textarea>
                </div>
                <div class="form-group" style="margin-bottom: 10px;">
                    <label for="">Cuerpo</label>
                    <textarea type="text" class="form-control" name="cuerpo">{{novedades.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>